[Unit]
Description=Traefik Reverse Proxy
After=network.target

[Service]
User=root
Group=root
# Environment="DO_AUTH_TOKEN={{ do_auth_token | default('') }}"
ExecStart=/usr/local/bin/traefik
ExecReload=/bin/kill -USR1 $MAINPID
Restart=always
CPUShares=256
MemoryLimit=256M
RestartSec=5

[Install]
WantedBy=network-online.target
